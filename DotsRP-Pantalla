<body>
    <img id="display" src="">
    <script>
        // Enlaces RAW directos para que el navegador no abra la web de GitHub
        var fotos = [
            "https://raw.githubusercontent.com/SrManuhacks/DotSRP-Download/main/castillo.jpeg",
            "https://raw.githubusercontent.com/SrManuhacks/DotSRP-Download/main/ciudad.jpeg",
            "https://raw.githubusercontent.com/SrManuhacks/DotSRP-Download/main/criba.jpeg",
            "https://raw.githubusercontent.com/SrManuhacks/DotSRP-Download/main/espaldas.jpeg",
            "https://raw.githubusercontent.com/SrManuhacks/DotSRP-Download/main/luna.jpeg",
            "https://raw.githubusercontent.com/SrManuhacks/DotSRP-Download/main/pilares.jpeg"
        ];
        
        // Selección aleatoria e inserción inmediata
        var chosen = fotos[Math.floor(Math.random() * fotos.length)];
        document.getElementById('display').src = chosen;
    </script>
